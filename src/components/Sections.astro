---
import edificios from "../assets/edificios.png";
---

<main
    id="mainSection"
    class="relative h-lvh w-full flex flex-col-reverse overflow-x-hidden
        text-3xl font-bold text-white bg-black"
>   <div id="bgBlack" class="h-8 w-full bg-black"></div>
    <div class="h-full flex-1 
            bg-gradient-to-b from-black from-20% via-blue-950 via-55% to-red-800 to-90%">
        <div
            id="container"
            class="w-full h-full z-10 flex bg-repeat-x bg-bottom"
            style={`background-image: url(${edificios.src});`}
        >
            <slot/>
        </div>
    </div>
</main>

<style>
    #bgBlack {
        background-repeat: repeat;
    }
</style>

<script>
    import { setSectionsAnimation } from "@/libs/animations";

    document.addEventListener("DOMContentLoaded", () => {    
        setSectionsAnimation({
            main: document.getElementById("mainSection") as HTMLElement,
            container: document.getElementById("container") as HTMLElement,
            sections: Array.from(document.querySelectorAll("section")) as HTMLElement[],
        });
    });

</script>

